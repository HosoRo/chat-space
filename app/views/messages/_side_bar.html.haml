.side_bar
  .side_bar__user-name
    .side_bar__user-name__top-items
      .side_bar__user-name__top-items__name 
        = current_user.name
      %ul.side_bar__user-name__top-items__icons
        %li.side_bar__user-name__top-items__icons__edit 
          = link_to new_group_path do
            %i.far.fa-edit
        %li.side_bar__user-name__top-items__icons__cog
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog

  .side_bar__group
    - current_user.groups.each do |group|
      .side_bar__group__lists
        = link_to group_messages_path(group) do
          .side_bar__group__lists__top
            = group.name
          .side_bar__group__lists__bottom
            = group.show_last_message
  